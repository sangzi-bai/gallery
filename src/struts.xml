<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="com" extends="struts-default" namespace="/act">
        <action name="updata" class="com.updata">
            <result name="success">/updata_success.html</result>
            <result name="error">/updata_error.html</result>
        </action>
        <action name="home" class="com.loadHome">
            <result name="success">/index.jsp</result>
        </action>
        <action name="load" class="com.load">
            <result name="success">/index.jsp</result>
        </action>
        <action name="loadwhisp" class="com.loadWhispering">
            <result name="success">/whispering.jsp</result>
        </action>
        <action name="updataWhisp" class="com.updataWhisping">
            <result name="success">/whisperone.jsp</result>
        </action>
    </package>
</struts>